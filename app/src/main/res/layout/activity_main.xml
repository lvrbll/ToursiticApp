<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wydarzenie w Sudetach"
        android:textSize="30sp"
        android:padding="10dp"
        android:textStyle="bold"
        android:layout_gravity="center"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="266dp"
        android:src="@drawable/widok" />

    <TextView
        android:id="@+id/likeCounter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0 polubień"
        android:gravity="right"
        android:padding="8dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/likeButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="POLUB"
            android:layout_weight="1"
            android:backgroundTint="#aaabfa"/>

        <Button
            android:id="@+id/likeClearButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="USUŃ"
            android:layout_weight="1"
            android:backgroundTint="#aaabfa"/>/>

    </LinearLayout>

    <EditText
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Podaj e-mail:"/>

    <EditText
        android:id="@+id/pas1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Podaj hasło:"
        android:inputType="textPassword"/>

    <EditText
        android:id="@+id/pas2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Powtórz hasło:"
        android:inputType="textPassword"/>

    <Button
        android:id="@+id/saveDataButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ZAPISZ"
        android:layout_gravity="center"/>

    <Button
        android:id="@+id/showButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ZOBACZ UCZESTNIKA"
        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Obszar komunikatów"
        android:layout_gravity="center"
        android:layout_margin="20dp"/>


</LinearLayout>